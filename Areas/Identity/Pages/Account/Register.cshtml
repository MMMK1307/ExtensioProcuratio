@page
@using ExtensioProcuratio.Enumerators;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutNotLogedIn";
}

<div class="container-small-form">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Cadastrar nova conta</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Input.FirstName">Primeiro Nome</label>
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Input.LastName">Sobrenome</label>
                    <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Input.Subject">Área de Conhecimento</label>
                <select asp-for="Input.Subject" class="form-select">
                    <option value=@SubjectAreas.None selected>None</option>
                    <option value=@SubjectAreas.Languages>Language</option>
                    <option value=@SubjectAreas.Mathematics>Mathematics</option>
                    <option value=@SubjectAreas.Technology>Technology</option>
                </select>
                <span asp-validation-for="Input.Subject" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Role">Quem és?</label>
                <select class="form-select" asp-for="Input.Role">
                    <option value=3 selected>Aluno</option>
                    <option value=2>Professor</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Input.Password">Senha</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirme a Senha</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button id="registerSubmit" type="submit" class="btn btn-block btn-primary">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}